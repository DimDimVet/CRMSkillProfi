@model WebCRMSkillProfi.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html style="font-size: 16px;" lang="ru">
<head>

    <title>Home</title>
    <link rel="stylesheet" href="~/css/Home.css" media="screen">

</head>
<body background="@Model._imagePath" class="u-xl-mode" data-lang="ru">

    <section class="u-align-left u-clearfix u-image u-shading u-section-1" src="" data-image-width="256" data-image-height="256" id="sec-6d9e">
        <div class="u-clearfix u-sheet u-sheet-1">
            <h1 class="u-align-right u-text u-text-1">@Model._LabelH1</h1>
            <h1 class="u-text u-title u-text-2">@Model._LabelH3</h1>
            <p class="u-large-text u-text u-text-variant u-text-3">@Model._LabelDescription</p>
        </div>
    </section>
    <section class="u-align-center u-clearfix u-section-2" id="sec-6002">
        <div class="u-clearfix u-sheet u-sheet-1">
            <p class="u-text u-text-body-alt-color u-text-default-lg u-text-default-md u-text-default-sm u-text-default-xl u-text-1">Открыть чат со специалисто​м</p>
            <div class="u-form u-form-1">

                <form method="post" controller="Home" action="Home/InChatUser" >

                    <div class="u-form-group u-form-name u-label-top">
                        <label for="name-558c" class="u-label">@Model._UserNameLabel</label>
                        <input type="text" placeholder="Name" id="name-558c" name="_UserName" class="u-border-1 u-border-grey-30 u-input u-input-rectangle" required="">
                    </div>
                    <div class="u-form-email u-form-group u-label-top">
                        <label for="email-558c" class="u-label">@Model._EmailLabel</label>
                        <input type="email" placeholder="Email" id="email-558c" name="_Email" class="u-border-1 u-border-grey-30 u-input u-input-rectangle" required="">
                    </div>

                    <div class="u-form-group u-form-submit u-label-top">
                        <p><input type="submit" value=@Model._ButtonNameChat class="u-btn u-btn-submit u-button-style"><p>
                    </div>
                </form>
             
            </div>
        </div>
    </section>

</body>
</html>



