                                <a class="u-post-header-link" >
                                    <img alt=""  class="u-blog-control u-expanded-width u-image u-image-default u-image-1" src="~/images/@Model._BlogList[i].ImageBlogPath">
                                </a>
                                <h4 class="u-blog-control u-text u-text-1">
                                    <a class="u-post-header-link" >@Model._BlogList[i].DateBlog</a>
                                    <a class="u-post-header-link" >@Model._BlogList[i].TitleBlog</a>
                                </h4>

                                <form method="post" controller="Blog" action="BlogItem">
                                    <div>
                                        <input type="hidden" name="GetId" value=@Model._BlogList[i].Id />
                                        <p><input type="submit" class="u-blog-control u-btn u-button-style u-btn-1" value="Прочесть..." /></p>
                                    </div>
                                </form>
                                
                            </div>
                        </div>
