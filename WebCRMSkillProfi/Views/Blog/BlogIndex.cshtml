        <div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
            <div class="u-blog u-expanded-width u-layout-horizontal u-blog-1">
                <div class="u-repeater u-repeater-1">

                    @for (int i = 0; i < Model._BlogList.Count; i++)
