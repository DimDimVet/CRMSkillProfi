@model WebCRMSkillProfi.ViewModels.BlogViewModel
@{
    ViewData["Title"] = "Blog Page";
}
<!DOCTYPE html>
<html style="font-size: 16px;" lang="ru">
<head>
    <title>Блог</title>
    <link rel="stylesheet" href="~/css/Blog.css" media="screen">
</head>
<body background="~/images/@Model._imagePath" class="u-xl-mode" data-lang="ru">
   
